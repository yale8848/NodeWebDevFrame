{
    "apps": [{
        "name": "dxh-quest",
        "script": "./bin/www",
        "cwd": "./",
        "env": { "NODE_ENV": "local", "PORT": "1738" },
        "watch": "true",
        "watch_options": {
            "usePolling": true
        },
        "max_memory_restart": "1024M",
        "exec_mode": "fork",
        "ignoreWatch": ["./node_modules", "./pm2"],
        "error_file": "",
        "out_file": "",
        "log_file": true,
        "log_date_format": "YYYY-MM-DD HH:mm Z"
    }]
}